generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @default(now())
  email          String   @unique
  name           String?
  role           Role     @default(USER)
  passwordBcrypt String?
  portfolioIds   String[]
  watchlist      String[]
}

model StockPosition {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime   @default(now())
  ticker      String
  amount      Int
  portfolio   Portfolio? @relation(fields: [portfolioId], references: [id])
  portfolioId String?    @db.ObjectId
}

model Portfolio {
  id        String          @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  userId    String
  positions StockPosition[] @relation()
}

model KnownHolidays {
  id   String   @id @default(auto()) @map("_id") @db.ObjectId
  date DateTime
}

model StockEODData {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  open         Float
  low          Float
  high         Float
  close        Float
  volume       Float
  adj_high     Float
  adj_low      Float
  adj_close    Float
  adj_open     Float
  adj_volume   Float
  split_factor Float
  dividend     Float
  symbol       String
  exchange     String
  date         DateTime
}

model Watchlist {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  userId       String   @db.ObjectId
  watchlist    String[]
}
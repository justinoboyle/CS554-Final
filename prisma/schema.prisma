// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt      DateTime @default(now())
  email          String   @unique
  name           String?
  role           Role     @default(USER)
  passwordBcrypt String?
  portfolioIds   String[]
}

model StockPosition {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  amount    Int
}

model Portfolio {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  userId    String
  positions String[] @default([])
}

model StockEODData {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  open         Float
  low          Float
  high         Float
  close        Float
  volume       Float
  adj_high     Float
  adj_low      Float
  adj_close    Float
  adj_open     Float
  adj_volume   Float
  split_factor Float
  dividend     Float
  symbol       String
  exchange     String
  date         DateTime
}
